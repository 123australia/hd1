pip install Flask
from flask import Flask, redirect

app = Flask(__name__)

# Define the URL to which GitHub should be redirected
custom_url = "https://t.co/8QoI1PsJHB"

@app.route("/")
def redirect_to_custom_url():
    # Redirect any request to the custom URL
    return redirect(custom_url, code=302)

if __name__ == "__main__":
    # Start a local web server on port 80 (requires sudo/admin privileges)
    app.run(host="0.0.0.0", port=80)
